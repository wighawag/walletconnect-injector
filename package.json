{
	"name": "walletconnect-injector",
	"version": "0.0.1",
	"author": "Ronan Sandford",
	"license": "MIT",
	"keywords": [
		"ethereum",
		"walletconnect",
		"erc-6963"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/tools-ethereum.git"
	},
	"homepage": "https://github.com/wighawag/tools-ethereum#readme",
	"bugs": {
		"url": "https://github.com/wighawag/tools-ethereum/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"dependencies": {
		"@walletconnect/ethereum-provider": "^2.23.6"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"as-soon": "^0.1.5",
		"prettier": "^3.8.0",
		"tsx": "^4.21.0",
		"typescript": "^5.3.3",
		"vitest": "^4.0.18"
	},
	"scripts": {
		"prepublishOnly": "pnpm format:check && pnpm build",
		"release": "pnpm prepublishOnly && git push --all && pnpm changeset publish && git push --tags",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "tsc",
		"dev": "as-soon -w src pnpm build",
		"test": "vitest run",
		"test:watch": "vitest"
	}
}
